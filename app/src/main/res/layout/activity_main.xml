<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/snackbar"
    android:background="#fffebc"
    tools:context="com.example.android.campuscare.MainActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/campus"
            android:text="Join Now To Know and \n Share feeds about your Institution"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#000000"
            android:shadowColor="#000000"
            />

        <EditText
            android:id="@+id/userid"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="224dp"
            android:fontFamily="@font/campus"
            android:background="@drawable/email"
            android:ems="10"
            android:gravity="center"
            android:hint="User Id"
            android:inputType="textEmailAddress|textPersonName" />
        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userid"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/campus"
            android:background="@drawable/email"
            android:ems="10"
            android:gravity="center"
            android:hint="Email Id"
            android:inputType="textEmailAddress|textPersonName" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/campus"
            android:layout_centerInParent="true"
            android:layout_below="@id/email"
            android:background="@drawable/email"
            android:ems="10"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/signup"
            android:layout_width="181dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/campus"
            android:background="@drawable/login_button"
            android:backgroundTint="#ffae00"
            android:gravity="center"
            android:onClick="register"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:onClick="log_in"
            android:fontFamily="@font/campus"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />




</RelativeLayout></ScrollView>
</android.support.design.widget.CoordinatorLayout>

